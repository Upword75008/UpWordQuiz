    },
    {
      question: "Que signifie 'comprehensive' en anglais ?",
      options: ["A) comprÃ©hensif", "B) complet", "C) comprÃ©hension", "D) comprendre"],
      correct: "B) complet",
      explanation: "'Comprehensive' = complet, exhaustif. 'ComprÃ©hensif' se dit 'understanding'."
    },
    {
      question: "Comment dit-on 'prÃ©tendre' (affirmer) en anglais ?",
      options: ["A) pretend", "B) claim", "C) assert", "D) maintain"],
      correct: "B) claim",
      explanation: "'Claim' = prÃ©tendre (affirmer). 'Pretend' signifie faire semblant."
    },
    {
      question: "Que signifie 'eventually' en anglais ?",
      options: ["A) Ã©ventuellement", "B) finalement", "C) possiblement", "D) rÃ©cemment"],
      correct: "B) finalement",
      explanation: "'Eventually' = finalement. 'Ã‰ventuellement' se dit 'possibly'."
    }
  ];

  const handleAnswerSelect = (answer) => {
    setSelectedAnswer(answer);
  };

