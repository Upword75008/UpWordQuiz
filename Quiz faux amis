    setShowResult(false);
    setScore(0);
    setQuizComplete(false);
  };

  const getScoreMessage = () => {
    if (score >= 8) return "Excellent! You're ready for the next challenge! ğŸ†";
    if (score >= 6) return "Good job! A few more tries and you'll master it. ğŸ‘";
    if (score >= 4) return "Keep practicing â€” you're getting there! ğŸ’ª";
    return "Don't give up! Every expert was once a beginner. ğŸ“š";
  };

  if (quizComplete) {
    return (
