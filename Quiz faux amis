  const [quizComplete, setQuizComplete] = useState(false);

  const questions = [
    {
      question: "'Livre' veut dire... en anglais (attention au piÃ¨ge) :",
      options: ["A) book", "B) pound", "C) library", "D) page"],
      correct: "B) pound",
      explanation: "En anglais, 'pound' signifie livre (poids), pas 'book' qui signifie livre (objet Ã  lire). C'est un faux-ami classique !"
    },
    {
      question: "Que signifie le mot anglais 'library' ?",
      options: ["A) librairie", "B) bibliothÃ¨que", "C) libertÃ©", "D) littÃ©rature"],
