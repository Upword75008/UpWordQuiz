    <script>
        // Couleurs de fond al√©atoires
        const colors = ['#8dc63f', '#023762'];
        const randomColor = colors[Math.floor(Math.random() * colors.length)];
        document.body.style.backgroundColor = randomColor;
        
        // R√©ponses correctes
        const correctAnswers = ['a', 'a', 'a', 'a', 'a', 'a', 'a', 'a'];
        const correctTexts = [
            'decided',
            'we had never seen', 
            'had heard',
            'it stopped',
            'walked',
            'took',
            'ordered',
            'we made the trip'
        ];
        
        let userAnswers = new Array(8).fill(null);
        let quizSubmitted = false;
        
        // Gestion des clics sur les options
        document.querySelectorAll('.option').forEach(option => {
            option.addEventListener('click', function() {
                if (quizSubmitted) return;
                
                const question = parseInt(this.dataset.question);
                const answer = this.dataset.answer;
                
                // D√©s√©lectionner les autres options de la m√™me question
                document.querySelectorAll(`[data-question="${question}"]`).forEach(opt => {
                    opt.classList.remove('selected');
                });
                
                // S√©lectionner cette option
                this.classList.add('selected');
                userAnswers[question] = answer;
            });
        });
        
        function submitQuiz() {
            if (quizSubmitted) return;
            
            // V√©rifier que toutes les questions ont une r√©ponse
            if (userAnswers.includes(null)) {
                alert('Veuillez r√©pondre √† toutes les questions avant de valider.');
                return;
            }
            
            quizSubmitted = true;
            
            let score = 0;
            
            // Marquer les r√©ponses et afficher les corrections
            for (let i = 0; i < 8; i++) {
                const userAnswer = userAnswers[i];
                const correct = correctAnswers[i];
                const questionOptions = document.querySelectorAll(`[data-question="${i}"]`);
                
                questionOptions.forEach(option => {
                    const optionAnswer = option.dataset.answer;
                    
                    if (optionAnswer === correct) {
                        option.classList.add('correct');
                        if (optionAnswer === userAnswer) {
                            score++;
                        }
                    } else if (optionAnswer === userAnswer && optionAnswer !== correct) {
                        option.classList.add('incorrect');
                        
                        // Afficher la bonne r√©ponse
                        const correctAnswerDiv = document.createElement('div');
                        correctAnswerDiv.className = 'correct-answer';
                        correctAnswerDiv.textContent = `Bonne r√©ponse : ${correct}) ${correctTexts[i]}`;
                        option.parentNode.appendChild(correctAnswerDiv);
                    }
                });
            }
            
            // Afficher les r√©sultats
            displayResults(score);
            
            // D√©sactiver le bouton
            document.querySelector('.submit-btn').disabled = true;
            document.querySelector('.submit-btn').textContent = 'Quiz termin√©';
        }
        
        function displayResults(score) {
            const resultsDiv = document.getElementById('results');
            const scoreDisplay = document.getElementById('scoreDisplay');
            const feedback = document.getElementById('feedback');
            
            scoreDisplay.textContent = `${score}/8`;
            
            let feedbackText = '';
            let feedbackColor = '';
            
            if (score === 8) {
                feedbackText = 'üéØ Excellent ! Tu ma√Ætrises les temps du pass√© !';
                feedbackColor = '#28a745';
            } else if (score >= 6) {
                feedbackText = 'üëè Tr√®s bien ! Encore un petit effort pour viser la perfection.';
                feedbackColor = '#007bff';
            } else if (score >= 4) {
                feedbackText = 'üëç Pas mal, mais revois les bases du past simple et du past perfect.';
                feedbackColor = '#ffc107';
            } else {
                feedbackText = 'üìö Un petit rappel des temps du pass√© s\'impose !';
                feedbackColor = '#dc3545';
            }
            
            feedback.textContent = feedbackText;
            feedback.style.backgroundColor = feedbackColor + '20';
            feedback.style.color = feedbackColor;
            feedback.style.border = `2px solid ${feedbackColor}`;
            
            resultsDiv.style.display = 'block';
            
            // Scroll vers les r√©sultats
            resultsDiv.scrollIntoView({ behavior: 'smooth' });
        }
    </script>
